{
  "name": "core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "gen": "prisma generate",
    "clean": "rm -rf .next && rm -rf node_modules",
    "dev:clean": "pnpm clean && pnpm install && pnpm gen && pnpm run dev",
    "build": "next build",
    "build:clean": "pnpm clean && pnpm install && pnpm gen && pnpm run build",
    "start": "next start",
    "serve": "pnpm build && pnpm start",
    "serve:clean": "pnpm build:clean && pnpm start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,css,yaml,yml}\"",
    "check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,css,yaml,yml}\""
  },
  "dependencies": {
